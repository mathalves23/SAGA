  "protocol_handlers": [
    {
      "protocol": "web+saga",
      "url": "/share?url=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.saga.fitness",
      "id": "com.saga.fitness"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/saga-fitness/id123456789"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  
